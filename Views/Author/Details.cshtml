@using BookStore.Models
@model Author

<!-- Single Product Area Start -->
<div class="single-product-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-7">
                <div class="single-product-image-inner">
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="one">
                            <a class="venobox" href="img/single-product/bg-1.jpg" data-gall="gallery" title="">
                                <img src="~/assets/img/author/@Model.Image" alt="" style="width: 280px; height: 390px; border-radius: 20px;">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9 col-sm-5">
                <div class="single-product-details">

                    <h2>@Model.Name</h2>
                    <p>@Model.Description </p>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <div class="p-details-tab-content">
                    <div class="p-details-tab">
                        <ul class="p-details-nav-tab" role="tablist">
                            <li role="presentation" class="active"><a href="#more-info" aria-controls="more-info" role="tab" data-toggle="tab">Description</a></li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                    <div class="tab-content review">
                        <div role="tabpanel" class="tab-pane active" id="more-info">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var book in Model.Books)
        {
            <div class="single-shop-product" style="margin:10px 0;">
                <div class="col-xs-12 col-sm-3 col-md-3">
                    <div class="left-item">
                        <a asp-action="Details" asp-route-id="@book.Id" title="East of eden">
                            <img src="~/assets/img/book/@book.Image" style="width:200px; height:270px" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-9 col-md-9">
                    <div class="deal-product-content">
                        <h4>
                            <a asp-action="Details" asp-route-id="@book.Id" title="East of eden">@book.Title</a>
                        </h4>
                        <div class="product-price">
                            <span class="new-price">$ @book.Price</span>
                        </div>
                        <p>@book.Description</p>
                        <div class="availability">
                            <span><a href="cart.html">Add to cart</a></span>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Single Product Area End -->
    </div>
</div>