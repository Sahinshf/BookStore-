@using BookStore.ViewModels
@model RegisterViewModel
<link rel="stylesheet" href="~/css/register.css">


<body>
    <div class="accountContainer">  
        <input type="checkbox" id="flip">
        <div class="cover">
            <div class="front">
                <img src="~/images/bookregistercover.jpg" alt="">
                <div class="text">
                 
                </div>
            </div>
           
        </div>
        <div class="forms">
            <div class="form-content">
              
                <div class="signup-form">
                    <div class="title">Signup</div>

                    <form method="post">


                        <div class="input-boxes">
                            <div class="input-box">
                                <i class="fas fa-user" style="margin: 5px;"></i>
                                <input asp-for="Username" placeholder="Enter your username">
                            </div>
                            <div class="input-box">
                                <i class="fas fa-envelope" style="margin: 5px;"></i>
                                <input asp-for="Email" placeholder="Enter your email">

                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock" style="margin: 5px;"></i>
                                <input asp-for="Password" placeholder="Enter your password">

                            </div>
                            <div class="input-box">
                                <i class="fas fa-lock" style="margin: 5px;"></i>
                                <input asp-for="ConfirmPassword" placeholder="Enter your confirm password">

                            </div>
                            <div class="button input-box">
                                <input type="submit" value="Sumbit">
                            </div>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</body>
