@using BookStore.Models
@model List<Book>

<!-- Shop Area Start -->
<div class="shopping-area section-padding">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="shop-tab-area">
                    <div class="shop-tab-list">
                        <div class="shop-tab-pill pull-left">
                            <ul>
                                <li class="active" id="left"><a data-toggle="pill" href="#home"><i class="fa fa-th"></i><span>Grid</span></a></li>
                                <li><a data-toggle="pill" href="#menu1"><i class="fa fa-th-list"></i><span>List</span></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="row tab-pane fade in active" id="home">
                            <div class="shop-single-product-area">

                                @foreach (var book in Model)
                                {

                                    <div class="col-md-3 col-sm-6">
                                        <div class="single-banner">
                                            <div class="product-wrapper">
                                                <a asp-action="Details" asp-route-id="@book.Id" class="single-banner-image-wrapper">
                                                    <img alt="" src="~/assets/img/book/@book.Image" style="width:270px; height:390px;">
                                                    <div class="price" style="padding: 5px 10px; background-color:greenyellow; border-radius: 10px;"><span>$</span>@book.Price</div>
                                                </a>
                                                <div class="product-description">
                                                    <div class="functional-buttons">

                                                        <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                                            <input type="hidden" name="quantity" value="1" />
                                                            <input type="hidden" name="bookId" value="@book.Id" />
                                                            <button type="submit" style="border-radius:100% ; font-size: 2.5rem ; padding: 4px 10px">
                                                                <i class="fa-2xl fa fa-shopping-cart"></i>
                                                            </button>
                                                        </form>
                                                      
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="banner-bottom text-center">
                                                <div class="banner-bottom-title">
                                                    <a asp-action="Details" asp-route-id="@book.Id">@book.Title</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div id="menu1" class="tab-pane fade">
                            <div class="row">

                                @foreach (var book in Model)
                                {

                                    <div class="single-shop-product">
                                        <div class="col-xs-12 col-sm-3 col-md-3">
                                            <div class="left-item">
                                                <a asp-action="Details" asp-route-id="@book.Id" title="East of eden">
                                                    <img src="~/assets/img/book/@book.Image" style="width:200px; height:270px" alt="">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-9 col-md-9">
                                            <div class="deal-product-content">
                                                <h4>
                                                    <a asp-action="Details" asp-route-id="@book.Id" title="East of eden">@book.Title</a>
                                                </h4>
                                                <div class="product-price">
                                                    <span class="new-price">$ @book.Price</span>
                                                </div>
                                                <p>@book.Description</p>
                                                <div class="availability">
                                                    <span><a href="cart.html">Add to cart</a></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Area End -->