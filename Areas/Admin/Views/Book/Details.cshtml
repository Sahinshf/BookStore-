@using BookStore.Models
@model Book
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <div  class="row">
                <div  class="col-md-4 text-center">
                    <img src="~/assets/img/book/@Model.Image" class="img-fluid mb-3" alt="@Model.Title" />
                </div>
                <div  class="col-md-8">
                    <h2 class="card-title" style="font-size: 24px">@Model.Title</h2>
                    <p class="card-text" style="font-size: 18px">Description: @Html.Raw(Model.Description)</p>
                    <div class="row" >
                        <div class="col-md-6">
                            <p class="card-text" style="font-size: 18px">Author: @Model.Author.Name</p>
                            <p class="card-text" style="font-size: 18px">Price: $@Model.Price</p>
                        </div>
                        <div class="col-md-6">
                            <p class="card-text" style="font-size: 18px">Stock Quantity: @Model.StockQuantity</p>
                            <p class="card-text" style="font-size: 18px">Sold Quantity: @Model.SoldQuantity</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-primary" asp-action="Index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
